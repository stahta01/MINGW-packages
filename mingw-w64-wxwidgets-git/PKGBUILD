    --with-libtiff=sys \
    --without-xtest \
    --enable-shared \
    --enable-textfile \
    --enable-iff \
    --enable-permissive \
    --enable-graphics_ctx \
    --enable-graphics-d2d \
    --enable-regkey \
    --disable-mediactrl \
    --disable-webview \
