  make -j1 DESTDIR="${srcdir}"/install-msw-${_build_suffix}-UNIV-static install

  [[ -d "${srcdir}"/build-msw-${_build_suffix}-UNIV ]] && rm -rf "${srcdir}"/build-msw-${_build_suffix}-UNIV
